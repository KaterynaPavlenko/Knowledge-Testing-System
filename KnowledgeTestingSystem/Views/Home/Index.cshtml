@model IEnumerable<KnowledgeTestingSystem.Models.TestViewModel>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

@using (Html.BeginForm())
{
    <p>
        Find: @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
    </p>
}
<div class="container pt-4">
    <div class="row text-center text-lg-left">
        @foreach (var item in Model)
        {
            using (Html.BeginForm("Index", "Home",
                new
                {
                    ViewBag.ReturnUrl
                },
                FormMethod.Post,
                new
                {
                    @class = "form-row col-md-4"
                }))
            {
                <div class="card mb-4 shadow">
                    <img class="card-img-top" src="@Url.Content(item.CoverImage)" alt="@item.Name" style="display: block; height: 250px; width: 100%;">
                    <div class="card-body">
                        <h4 class="card-title">
                            Name:
                            @Html.DisplayFor(modelItem => item.Name)
                        </h4>
                        <p class="card-text">
                            Time:
                            @Html.DisplayFor(modelItem => item.TimeMinutes)
                        </p>
                        <p class="card-text">
                            Theme of test:
                            @Html.DisplayFor(modelItem => item.ThemeOfTest)
                        </p>
                        <div class="btn-group">
                            <input type="hidden" value=@item.Id name="id">
                            <input class="btn btn-light" type="submit" value="Take" />
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>









