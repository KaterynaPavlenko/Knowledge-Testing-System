@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new {id = "logoutForm"}))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav ml-auto navbar-dark justify-content-end p-0">
            <li class="nav-item">
                @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", null, new {@class = "nav-link ", title = "Manage"})
            </li>
            <li class="nav-item">
                <a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
            </li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav ml-auto navbar-dark justify-content-end p-0">
        <li class="nav-item">@Html.ActionLink("Register", "Register", "Account", null, new {@class = "nav-link"})</li>

        <li class="nav-item">@Html.ActionLink("Log in", "Login", "Account", null, new {@class = "nav-link"})</li>
    </ul>
}